{
  "_internal.health":{
    "documentation":{
      "url": null,
      "description":"Returns the health of the cluster."
    },
    "stability":"experimental",
    "visibility":"private",
    "headers":{
      "accept": [ "application/json"]
    },
    "url":{
      "paths":[
        {
          "path":"/_internal/_health",
          "methods":[
            "GET"
          ]
        },
        {
          "path":"/_internal/_health/{component}",
          "methods":[
            "GET"
          ],
          "parts":{
            "component":{
              "type":"string",
              "description":"the component to fetch"
            }
          }
        },
        {
          "path":"/_internal/_health/{component}/{indicator}",
          "methods":[
            "GET"
          ],
          "parts":{
            "component":{
              "type":"string",
              "description":"the component to fetch"
            },
            "indicator":{
              "type":"string",
              "description":"the indicator to fetch"
            }
          }
        }
      ]
    },
    "params":{
      "timeout":{
        "type":"time",
        "description":"Explicit operation timeout"
      }
    }
  }
}
